<div class="container bd-content" style="padding: 3rem 1.5rem">
    <h3 class="pageTitle">Update City</h3>

    <form id="updateCity">
        <fieldset>
            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">City Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control addRecord" name="Name" id="Name" value="{{results.Name}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="State" class="col-sm-2 col-form-label">State</label>
                <div class="col-sm-10">
                    <select class="form-control addRecord" name="State" id="State">
                        {{#each states}}
                        <option value="{{this.Id}}">{{this.Name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <button type="button" class="btn btn-primary" name="Submit" id="editCityButton" onclick="updateCity({{results.Id}})">Update</button>

        </fieldset>
    </form>
    </div>
    <script src="public/db_update.js"></script>
    <script defer>selectState({{results.State}});</script>
