<div class="container bd-content" style="padding: 3rem 1.5rem">

    <h3>Zip-Codes</h3>

    <div>
        <button button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addForm">Add Zip-Code</button>
    </div>

    <div id="addForm" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Zip-Code</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addZip">
                        <fieldset>
                            <div class="form-group row">
                                <label for="Code" class="col-sm-4 col-form-label">Zip-Code</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control addRecord" name="Code" id="Code">
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" name="Submit" id="addZipButton">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <table id="zipTable" class="table">
        <tr>
            <th>Code</th>
            <th class="actionCell" colspan="2">Action</th>
        </tr>

        {{#if results}}
        {{#each results}}
        <tr>
            <td>{{this.Code}}</td>
            <td class="actionCell"><a href="/updateZip?id={{this.Code}}"><input class="btn btn-primary btn-sm" type="button" value="Update"></a></td>
            <td class="actionCell">
                <input type="button" class="btn btn-secondary btn-sm" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.Code}})">
                <input type="hidden" id="delete{{this.Code}}">
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </table>
    </div>

    <script src="public/dbZ.js"></script>
