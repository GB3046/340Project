<div class="container bd-content" style="padding: 3rem 1.5rem">

    <h3>Property-Types</h3>

    <div>
        <button button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addForm">Add Property-Type</button>
    </div>

    <div id="addForm" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Property-Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addPropertyType">
                        <fieldset>
                            <div class="form-group row">
                                <label for="Name" class="col-sm-4 col-form-label">Property-Type</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control addRecord" name="Name" id="Name">
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" name="Submit" id="addPropertyTypeButton">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <table id="propertyTypeTable" class="table">
        <tr>
            <th>Name</th>
            <th class="actionCell" colspan="2">Action</th>
        </tr>

        {{#if results}}
        {{#each results}}
        <tr id="row-{{this.Id}}">
            <td>{{this.Name}}</td>
            <td class="actionCell"><a href="/updateProperty?id={{this.Id}}"><input class="btn btn-primary btn-sm" type="button" value="Update"></a></td>
            <td class="actionCell">
                <input type="button" class="btn btn-secondary btn-sm" name="delete" value="Delete" onClick="deleteProperty('propertyTypeTable',{{this.Id}})">
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </table>
    </div>

    <script src="public/dbPT.js"></script>
